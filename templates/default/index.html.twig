{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Новости</h1>

    <table>
        <thead>
        <tr>
            <td>id</td>
            <td>name</td>
            <td>description</td>
            <td>
                {% if app.request.get('order') == 'asc' %}
                    <a href="?sort=created_at&order=desc">
                        created_at
                    </a>
                {% else %}
                    <a href="?sort=created_at&order=asc">
                        created_at
                    </a>
                {% endif %}
            </td>
        </tr>
        </thead>
        <tbody>
        {% for item in news %}
            <tr>
                <td>{{ item.id }}</td>
                <td>
                    <a href="{{ path('news.detail', {'slug': item.slug}) }}">{{ item.name }}</a>
                </td>
                <td>{{ item.description }}</td>
                <td>{{ item.createdAt|date('d.m.Y h:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include '_pagination.html.twig' with {'last_page': last_page, 'page_name': 'news_page'} %}
</div>
{% endblock %}
